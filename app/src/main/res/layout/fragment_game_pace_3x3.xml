<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_place_3x3">

    <RelativeLayout
        android:id="@+id/game_3x3_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/time_place_3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TableLayout
            android:layout_width="369dp"
            android:layout_height="550dp"
            android:layout_below="@+id/time_place_3x3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_place_3x3_1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_place_3x3_4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_place_3x3_7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />

                <Button
                    android:id="@+id/button_place_3x3_9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#C8C7C7"
                    android:importantForAccessibility="no"
                    tools:ignore="VisualLintButtonSize" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/score_place_3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_place_3x3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:text="Рахунок: 0"
            android:textAlignment="center" />
    </RelativeLayout>
</FrameLayout>